<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="Widget.App.Button.Primary" parent="Widget.App.Button">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.App.Button">
        <item name="backgroundTint">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="Widget.App.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">@dimen/button_padding</item>
        <item name="strokeColor">@color/primaryColor</item>
        <item name="strokeWidth">@dimen/button_stroke_width</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>
    <style name="RoButton" parent="@style/Widget.Material3.Button">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:foreground">@drawable/ripple_corners_8dp</item>
        <item name="android:insetLeft">0.0dip</item>
        <item name="android:insetRight">0.0dip</item>
        <item name="android:insetTop">0.0dip</item>
        <item name="android:insetBottom">0.0dip</item>
        <item name="android:paddingStart">@dimen/dp_24</item>
        <item name="android:paddingEnd">@dimen/dp_24</item>
        <item name="backgroundTintMode">add</item>
        <item name="cornerRadius">@dimen/dp_8</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp_12</item>
        <item name="iconSize">@dimen/dp_16</item>
        <item name="iconTint">@color/black</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="TextStyle">semibold</item>
    </style>

    <style name="RoWhiteButton" parent="@style/RoButton">
        <item name="android:background">@drawable/bg_white_corners_8dp</item>
        <item name="android:foreground">@drawable/ripple_dark_corners_8dp</item>
    </style>
    <style name="RoYellowButton" parent="@style/RoButton">
        <item name="android:background">@drawable/bg_gradient_yellow_corners_8dp</item>
        <item name="android:foreground">@drawable/ripple_dark_corners_8dp</item>
    </style>
    <style name="RoTag" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/dp_22</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
        <item name="android:paddingEnd">@dimen/dp_8</item>
        <item name="TextStyle">bold</item>
    </style>
    <style name="RoTagImdb" parent="@style/RoTag">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_yellow_stroke_1dp_corners_4dp</item>
    </style>
    <style name="RoTagOutline" parent="@style/RoTag">
        <item name="android:background">@drawable/bg_white_stroke_1dp_corners_4dp</item>
        <item name="TextStyle">medium</item>
    </style>
    <style name="RoTagSolid" parent="@style/RoTag">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_white_corners_4dp</item>
    </style>
    <style name="ShapeCorner12dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_12</item>
    </style>

    <dimen name="sp_14">14sp</dimen>
    <dimen name="dp_24">24dp</dimen>
    <dimen name="dp_22">22dp</dimen>
</resources>